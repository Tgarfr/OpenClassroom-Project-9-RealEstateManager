<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/item_estate_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/estate_list_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_estate_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="@string/estate_list_type"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/item_estate_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_estate_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:text="@string/estate_list_city"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/item_estate_price"
        app:layout_constraintLeft_toRightOf="@id/item_estate_picture"
        app:layout_constraintTop_toBottomOf="@id/item_estate_type" />

    <TextView
        android:id="@+id/item_estate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="@string/estate_list_price"
        android:textColor="@color/estate_list_price"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_estate_picture" />

    <View
        android:id="@+id/item_dividing_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/estate_list_dividing_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>